<!-- Home page for Blog app -->

<div class="container mx-auto py-8">
  <div class="bg-white shadow-md rounded-lg p-6">
    <h1 class="text-3xl font-semibold text-gray-800 mb-4">Bienvenido al Blog <span class="font-normal text-gray-600"><%= user_signed_in? ? current_user.name : 'Invitado' %></span></h1>
    <%= link_to "Cerrar Sesión", destroy_user_session_path, method: :delete, class: "text-red-500 hover:text-red-700 mt-2", data: { turbo_method: :delete } if user_signed_in? %>

    <p class="text-gray-600 leading-relaxed mb-4">
      Bienvenido al Blog, aquí podrás encontrar una gran cantidad de artículos sobre diversos temas.
    </p>

    <div class="flex justify-center space-x-4">
      <%= link_to "Explorar Artículos", articles_path(@articles), class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline cursor-pointer" %>
      <%= link_to "Iniciar Sesión", new_user_session_path, class: "bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline cursor-pointer" unless user_signed_in?%>
      <%= link_to "Registrarme", new_user_registration_path, class: "bg-purple-500 hover:bg-purple-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline cursor-pointer" unless user_signed_in? %>
    </div>
  </div>
</div>
