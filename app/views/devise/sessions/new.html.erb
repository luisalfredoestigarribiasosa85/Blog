<%= render "shared/home_link" %>


<h2 class="text-2xl font-bold text-center mb-6">Iniciar Sesión</h2>
<div class="max-w-md mx-auto border border-gray-200 rounded-lg p-6 shadow-md">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field mb-4">
      <%= f.label :email, class: "block text-sm font-medium text-gray-700" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "border border-gray-300 rounded-md px-2 py-1 w-full" %>
    </div>

    <div class="field mb-4">
      <%= f.label :password, class: "block text-sm font-medium text-gray-700" %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "border border-gray-300 rounded-md px-2 py-1 w-full" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field mb-4">
        <%= f.check_box :remember_me, class: "mr-2" %>
        <%= f.label :remember_me, "Recordarme", class: "inline-block align-middle" %>
      </div>
    <% end %>

    <div class="actions mt-6">
      <%= f.submit "Iniciar sesión", class: "bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700" %>
    </div>
  <% end %>
</div>
<div class="text-center mt-4">
  <%= render "devise/shared/links" %>
</div>