<% flash.each do |type, message| %>
  <% bg_color = type == 'notice' ? 'bg-green-100 border-green-400 text-green-700' : 'bg-red-100 border-red-400 text-red-700' %>
  <div class="flash-message <%= bg_color %> border px-4 py-3 rounded relative mb-4 transition-all duration-300 ease-in-out" role="alert">
    <div class="flex justify-between items-center">
      <strong class="font-bold"><%= message %></strong>
      <button type="button" class="close-button text-xl font-bold hover:opacity-75 focus:outline-none" aria-label="Cerrar mensaje">
        &times;
      </button>
    </div>
  </div>
<% end %>