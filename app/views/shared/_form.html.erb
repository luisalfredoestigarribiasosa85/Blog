<!-- Manejo de errores -->
<% if @article.errors.any? %>
  <div id="error_explanation" class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
    <strong class="font-bold">¡Error!</strong>
    <ul class="list-inside list-disc text-sm mt-1">
      <% @article.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="max-w-2xl mx-auto">
  <%= form_with(model: article, local: true) do |form| %>
    <div class="mb-4">
      <label for="title" class="block text-gray-700 font-bold mb-2">Título</label>
      <input id="title" type="text" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline focus:border-blue-500" name="article[title]" value="<%= article.title %>">
    </div>

    <div class="mb-4">
      <label for="body" class="block text-gray-700 font-bold mb-2">Contenido</label>
      <textarea id="body" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline focus:border-blue-500" name="article[body]" rows="5"><%= article.body %></textarea>
    </div>

    <div class="mb-4">
      <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline transition duration-150 ease-in-out">Guardar</button>
    </div>
  <% end %>
</div>