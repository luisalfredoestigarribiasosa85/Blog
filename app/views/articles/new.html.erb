<h1>New Article</h1>

<%= form_with model: @article, class: "max-w-lg mx-auto py-6 px-4 sm:px-6 lg:px-8" do |form| %>
  <div class="mb-4">
    <%= form.label :title, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_field :title, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    <% @article.errors.full_messages_for(:title).each do |message| %>
      <div class="text-red-500 text-xs italic"><%= message %></div>
    <% end %>
  </div>
  
   <div class="mb-6">
    <%= form.label :body, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_area :body, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline h-32" %>
    <% @article.errors.full_messages_for(:body).each do |message| %>
      <div class="text-red-500 text-xs italic"><%= message %></div>
    <% end %>
  </div>
  
  <div class="flex items-center justify-between">
    <%= form.submit "Create Article", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
  </div>
<% end %>
